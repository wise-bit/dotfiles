{
  "layer": "top",
  "position": "top",
  "autohide": true,
  "autohide-blocked": false,
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  /* === Modules Order === */
  "modules-left": [
    "custom/archicon",
    "clock",
    "battery",
    "cpu",
    "memory",
    "disk",
    "temperature"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
    "wlr/taskbar",
    "idle_inhibitor",
    "pulseaudio#mic",
    "pulseaudio#audio",
    "pulseaudio/slider",
    /* "pulseaudio", */
    "network",
    "hyprland/language"
  ],
  /* === Modules Left === */
  "custom/archicon": {
    /* "format": "ÔçÜ", */
    /* "format": "üêã", */
    "format": "Ôåä",
    /* "on-click": "rofi -show drun", */
    "on-click": "~/.config/rofi/launchers/type-6/launcher.sh",
    "tooltip": false
  },
  "clock": {
    "timezone": "America/Toronto",
    "format": "{:%I:%M  %d/%m/%y}",
    "tooltip-format": "{calendar}",
    "calendar": {
      "mode": "month"
    }
  },
  "battery": {
    "format": "{capacity}% {status}",
    "format-charging": "ÔÉß {capacity}%",
    "format-discharging": "ÔâÇ {capacity}%",
    "format-full": "ÔâÄ Full",
    "tooltip": false,
    "device": "BAT0",
    "interval": 30
  },
  "cpu": {
    "format": "{usage}% Ó∞ô",
    "tooltip": true,
    "tooltip-format": "Uso de CPU: {usage}%\nN√∫cleos: {cores}"
  },
  "memory": {
    "format": "{}% Û∞çõ",
    "tooltip": true,
    "tooltip-format": "RAM en uso: {used} / {total} ({percentage}%)"
  },
  "disk": {
    "format": "{percentage_free}% ÔÇ†",
    "tooltip": true,
    "tooltip-format": "Espacio libre: {free} / {total} ({percentage_free}%)"
  },
  "temperature": {
    "format": "{temperatureC}¬∞C {icon}",
    "tooltip": true,
    "tooltip-format": "Temperatura actual: {temperatureC}¬∞C\nCr√≠tico si > 80¬∞C",
    "format-icons": [
      "Ôãâ"
    ]
  },
  /* === Modules Center === */
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "default": "ÔÑë",
      "active": "ÓÇ∂ÓÇ¥"
    },
    "persistent-workspaces": {
      "*": 2
    },
    "disable-scroll": true,
    "all-outputs": true,
    "show-special": true
  },
  /* === Modules Right === */
  "wlr/taskbar": {
    "format": "{icon}",
    "all-outputs": true,
    "active-first": true,
    "tooltip-format": "{name}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": [
      "rofi"
    ]
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    }
  },
  /* "pulseaudio/slider": {
    "format": "{volume}%",
    "tooltip": false,
    "on-click": "pavucontrol"
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-muted": "Ôö© {format_source}",
    "format-icons": {
      "default": [
        "ÔÄ¶",
        "ÔÄß"
      ]
    }
  }, */
  "pulseaudio#audio": {
    "format": "{icon} {volume}",
    "format-bluetooth-muted": "Û∞üé",
    "format-muted": "Û∞∏à",
    "format-icons": {
      "headphone": "ÔÄ•",
      "default": "ÔÄ¶"
    },
    "on-click" : "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-scroll-down" : "wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+ -l 1",
    "on-scroll-up" : "wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-",
    "tooltip": true
  },

  "pulseaudio#mic": {
    "format": "{format_source}",
    "format-source": "ÔÑ∞ {volume}",
    "format-source-muted": "ÔÑ±",
    "on-click" : "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
    "on-scroll-down" : "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 1%+ -l 1",
    "on-scroll-up" : "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 1%-",
    "tooltip": true
  },
  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
  },

